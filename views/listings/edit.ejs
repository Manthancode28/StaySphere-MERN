<% layout('layouts/boilerplate.ejs') -%>

    <div class="row mt-3">
        <div class="col-8 offset-2">

            <h2>Edit documentation</h2>
            <form method="POST" action="/listings/<%= listing._id%>?_method=PUT" novalidate class="needs-validation" enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="title" class="form-lable">Title</label>
                    <input type="text" name="listing[title]" value="<%= listing.title %>" class="form-control" required>
                    <div class="invalid-feedback">Enter Title.</div>
                    <div class="valid-feedback">Nice TitleðŸ˜€</div>
                </div>
                <div class="mb-3">
                    <label for="description" class="form-lable">Description</label>
                    <textarea type="text" name="listing[description]" <%=listing.description %> class="form-control" required></textarea>
                    <div class="invalid-feedback">Enter Description.</div>
                </div>


                <div class="mb-3">
                    <P>Original Image Preview</P>
                    <img src="<%= originalImageUrl %>" />
                </div>

                <div class="mb-3">
                    <label for="image" class="form-lable">Upload New Image</label>
                    <input type="file" name="listing[image]" class="form-control">
                </div>
                <div class="row">
                    <div class="mb-3 col-md-4">
                        <label for="price" class="form-lable">Price</label>
                        <input type="number" name="listing[price]" value="<%= listing.price %>" class="form-control" required>
                        <div class="invalid-feedback">Enter Price.</div>
                    </div>
                    <div class="mb-3 col-md-8">
                        <label for="country" class="form-lable">Country</label>
                        <div class="invalid-feedback">Country should be valid.</div>
                        <input type="text" name="listing[country]" value="<%= listing.country %>" class="form-control" required>
                    </div>
                    <div class="mb-3">
                        <label for="location" class="form-lable">Location</label>
                        <div class="invalid-feedback">Location should be valid</div>
                        <input type="text" name="listing[location]" value="<%= listing.location %>" class="form-control" required>
                    </div>
                </div>
                <button type="submit" class="btn btn-dark add-btn mb-3">Edit</button>
            </form>
        </div>
    </div>