    <title>Your Host Dashboard | Airbnb Clone</title>
    <style>
         :root {
            --primary-color: #FF5A5F;
            --secondary-color: #00A699;
            --dark-color: #484848;
            --light-color: #767676;
            --background-color: #f7f7f7;
            --card-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
        }
        
        body {
            font-family: 'Circular', -apple-system, BlinkMacSystemFont, Roboto, sans-serif;
            margin: 0;
            padding: 0;
            color: var(--dark-color);
            background-color: var(--background-color);
            line-height: 1.5;
        }
        
        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
        }
        
        h1 {
            color: var(--primary-color);
            font-size: 2.5rem;
            margin-bottom: 30px;
        }
        
        h2 {
            font-size: 1.8rem;
            color: var(--dark-color);
            margin: 30px 0 20px;
            padding-bottom: 10px;
            border-bottom: 1px solid #e0e0e0;
        }
        
        h3 {
            font-size: 1.3rem;
            margin: 0 0 10px;
            color: var(--dark-color);
        }
        
        .listings-container {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
            gap: 20px;
            margin-bottom: 40px;
        }
        
        a {
            text-decoration: none;
            color: black;
        }
        
        .listing-card {
            background: white;
            border-radius: 12px;
            overflow: hidden;
            box-shadow: var(--card-shadow);
            transition: transform 0.2s;
        }
        
        .listing-card:hover {
            transform: translateY(-5px);
        }
        
        .listing-image {
            height: 180px;
            background-color: #ddd;
            background-size: cover;
            background-position: center;
        }
        
        .listing-info {
            padding: 10px;
            text-decoration: none;
        }
        
        .booking-card {
            background: white;
            border-radius: 12px;
            padding: 20px;
            margin-bottom: 20px;
            box-shadow: var(--card-shadow);
        }
        
        .booking-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 15px;
        }
        
        .booking-dates {
            color: var(--light-color);
            margin: 10px 0;
        }
        
        .guest-info {
            display: flex;
            align-items: center;
            margin: 5px 0;
        }
        
        .status {
            display: inline-block;
            padding: 5px 10px;
            border-radius: 4px;
            font-weight: bold;
            text-transform: capitalize;
        }
        
        .status-pending {
            background-color: #FFF8E1;
            color: #FFA000;
        }
        
        .status-confirmed {
            background-color: #E8F5E9;
            color: #2E7D32;
        }
        
        .status-declined {
            background-color: #FFEBEE;
            color: #C62828;
        }
        
        .action-buttons {
            margin-top: 15px;
            display: flex;
            gap: 10px;
        }
        
        .btn {
            padding: 10px 15px;
            border: none;
            border-radius: 8px;
            font-weight: bold;
            cursor: pointer;
            transition: all 0.2s;
        }
        
        .btn-accept {
            background-color: var(--secondary-color);
            color: white;
        }
        
        .btn-accept:hover {
            background-color: #008489;
        }
        
        .btn-decline {
            background-color: white;
            color: var(--light-color);
            border: 1px solid #ddd;
        }
        
        .btn-decline:hover {
            border-color: var(--light-color);
        }
        
        hr {
            border: none;
            border-top: 1px solid #e0e0e0;
            margin: 40px 0;
        }
        
        .empty-state {
            text-align: center;
            padding: 40px;
            color: var(--light-color);
        }
        
        .host-nav {
            display: flex;
            gap: 15px;
            margin-bottom: 30px;
            padding-bottom: 15px;
            border-bottom: 1px solid #e0e0e0;
            position: sticky;
            top: 0;
            background-color: var(--background-color);
            z-index: 100;
            padding-top: 15px;
        }
        
        .nav-btn {
            padding: 10px 20px;
            border: none;
            border-radius: 8px;
            background-color: white;
            color: var(--dark-color);
            font-weight: bold;
            cursor: pointer;
            box-shadow: var(--card-shadow);
            transition: all 0.2s;
        }
        
        .nav-btn:hover {
            background-color: var(--primary-color);
            color: white;
            transform: translateY(-2px);
        }
    </style>
</head>

