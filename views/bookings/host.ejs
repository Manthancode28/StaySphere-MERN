    <div class="container">

        <!-- Navigation Bar -->
        <div class="host-nav">
            <button class="nav-btn" onclick="scrollToListings()">Your Listings</button>
            <button class="nav-btn" onclick="scrollToBookings()">Booking Requests</button>
            <button class="nav-btn" onclick="redirectToMyBookings()">My Bookings</button>
        </div>

        <h1>Welcome,
            <%= currUser.username %> üëã
        </h1>


        <section id="listings-section">
            <h2>Your Listings</h2>
            <% if (listings.length > 0) { %>
                <div class="listings-container">
                    <% listings.forEach(listing => { %>
                        <a href="/listings/ <%= listing._id %>" class="listing-link listing-card">
                            <div class="listing-card">
                                <div class="listing-image" style="background-image: url('<%= listing.image.url %>')"></div>
                                <div class="listing-info">
                                    <h3>
                                        <%= listing.title %>
                                    </h3>
                                    <p>
                                        <%= listing.location || 'Location not specified' %>
                                    </p>
                                    <p>$
                                        <%= listing.price || '0' %> per night</p>
                                </div>
                            </div>
                        </a>
                        <% }) %>
                </div>
                <% } else { %>
                    <div class="empty-state">
                        <p>You haven't created any listings yet.</p>
                        <a href="/listings/new" class="btn" style="background-color: var(--primary-color); color: white; display: inline-block; margin-top: 10px;">Create your first listing</a>
                    </div>
                    <% } %>
        </section>

        <hr>

        <section id="bookings-section">
            <h2>Booking Requests</h2>
            <% if (bookings.length > 0) { %>
                <% bookings.forEach(b => { %>
                    <div class="booking-card">
                        <div class="booking-header">
                            <h3>
                                <%= b.listing.title %>
                            </h3>
                            <span class="status status-<%= b.status %>"><%= b.status %></span>
                        </div>

                        <div class="guest-info">

                            <div>
                                <p><strong><%= b.guest.username %></strong></p>
                                <p>
                                    <%= b.guest.email %>
                                </p>
                            </div>
                        </div>

                        <div class="booking-dates">
                            <p>From <strong><%= b.checkIn.toDateString() %></strong> to <strong><%= b.checkOut.toDateString() %></strong></p>
                            <p>
                                <%= Math.ceil((b.checkOut - b.checkIn) / (1000 * 60 * 60 * 24)) %> nights ‚Ä¢ $
                                    <%= b.totalPrice %> total</p>
                        </div>

                        <% if (b.status === 'pending') { %>
                            <form action="/bookings/<%= b._id %>/status" method="POST" class="action-buttons">
                                <button type="submit" name="status" value="confirmed" class="btn btn-accept">‚úÖ Accept Request</button>
                                <button type="submit" name="status" value="declined" class="btn btn-decline">‚ùå Decline</button>
                            </form>
                            <% } %>
                    </div>
                    <% }) %>
                        <% } else { %>
                            <div class="empty-state">
                                <p>You don't have any booking requests yet.</p>
                            </div>
                            <% } %>
        </section>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function scrollToListings() {
            document.getElementById('listings-section').scrollIntoView({
                behavior: 'smooth'
            });
        }

        function scrollToBookings() {
            document.getElementById('bookings-section').scrollIntoView({
                behavior: 'smooth'
            });
        }

        function redirectToMyBookings() {
            window.location.href = '/bookings/my';
        }
    </script>
</body>

